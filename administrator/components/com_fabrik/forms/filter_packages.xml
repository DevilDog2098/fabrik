<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label=""
			description=""
			hint="JSEARCH_FILTER"
		/>

		<field
				name="published"
				type="status"
				onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			onchange="this.form.submit();"
			default="l.id ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="p.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="p.id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="p.label ASC">COM_FABRIK_LIST_NAME_ASC</option>
            <option value="p.label DESC">COM_FABRIK_LIST_NAME_DESC</option>
            <option value="p.published ASC">COM_FABRIK_PUBLISHED_ASC</option>
            <option value="p.published DESC">COM_FABRIK_PUBLISHED_DESC</option>
        </field>
		<field
			name="limit"
			type="limitbox"
			default="5"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
